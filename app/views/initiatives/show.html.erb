<%= render 'shared/navbar'%>
<p id="notice"><%= notice %></p>
<div class="container">

  <h1><%= @initiative.title %></h1>
  <p class="lead"><%= @initiative.description %></p>

  <%= link_to 'Edit', edit_initiative_path(@initiative) %> |
  <%= link_to 'Back', initiatives_path %>


  <div class="show">
  <div class="page">
    <div class="page__demo">
      <div class="main-container page__container">
        <div class="timeline">
          <% @initiative.commitments.each do |commitment| %>
          <div class="timeline__group">
            <div class="timeline__box">
              <div class="timeline__date">

                <span class="timeline__day"><%= commitment.due_date.day %></span>
                <span class="timeline__month"><%= commitment.due_date.strftime("%B")%></span>
              </div>
              <div class="timeline__post">
                <p><%= commitment.action %></p>
                <div class="timeline__content">


                  <p><%= commitment.content %>.</p>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
