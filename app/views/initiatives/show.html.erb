<%= render 'shared/navbar'%>
<p id="notice"><%= notice %></p>
<div class="container">

  <h1><%= @initiative.title %></h1>
  <p class="lead"><%= @initiative.description %></p>

  <%= link_to 'Editar', edit_initiative_path(@initiative), class:'btn btn-primary' %>
  <%= link_to 'AtrÃ¡s', initiatives_path, class:'btn btn-secondary' %>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-6">
        <div class="show-initiative">
          <div class="container-fluid">
            <div class="row example-basic">
              <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
                <ul class="timeline">
                  <% @timeline_commitments.each do |commitment| %>
                  <li class="timeline-item">
                      <div class="timeline-info text-muted">
                        <span><%= commitment.due_date.strftime("%d %B")%></span>
                      </div>
                      <div class="timeline-marker"></div>
                      <div class="timeline-content">
                        <h6 class="timeline-title"><%= commitment.action %></h6 >
                        <p><%= commitment.content %></p>
                      </div>
                  </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
