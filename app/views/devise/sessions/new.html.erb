<div class="pages-sign-in">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:'') do |f| %>
  <div class="form-signin">
    <%= image_tag 'logo-white', style:'height:55px', class:'mb-4' %>
    <h1 class="h3 mb-3 font-weight-normal text-center">Bienvenido de vuelta</h1>
    <label for="inputEmail" class="sr-only">Correo electrónico</label>
    <%= f.email_field :email, class:'form-control', placeholder:'Correo electrónico', required: 'true' %>
    <label for="inputPassword" class="sr-only">Contraseña</label>
    <%= f.password_field :password, autocomplete: "current-password", class:'form-control', placeholder: 'Contraseña', require:'true' %>
    <div class="checkbox mb-3">
      <label>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </label>
    </div>
    <%= f.submit 'Iniciar sesión', class:'btn btn-lg btn-primary btn-block' %>
    <hr>
    <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
