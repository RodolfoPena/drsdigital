<%= render 'shared/navbar'%>
<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Dashboard</h1>
  <p class="lead">Indicadores de resultados</p>
  <div class="row">
    <div class="col-md-2">
      <div class="card">
        <div class="card-header">Iniciativas</div>
        <div class="card-body">
          <h1 class="display-2">  <%= @initiatives.count %></h1>

        </div>
      </div>
    </div>
    <div class="col-md-10">
      <div class="card">
        <div class="card-header">Compromisos</div>
        <div class="card-body" style="overflow-y: scroll !important; height:153px;">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Compromiso</th>
                <th scope="col">Plazo</th>
                <th scope="col">Estado</th>
                <th scope="col">Responsable</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <% k = 0 %>
              <% @commitments.each do |commitment| %>
              <tr>
                <th scope="row"><%= k = k + 1 %></th>
                <td><%= commitment.action %></td>
                <td><%= commitment.due_date %></td>
                <td><%= commitment.status %></td>
                <td><%= User.find(commitment.responsible_id).email %></td>
                <td><%= link_to('Completar', complete_initiative_commitment_path(commitment.initiative, commitment), class: 'btn btn-sm btn-success', method: :PATCH)  unless commitment.closing_date %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col">

    </div>

  </div>
</div>
